<div class="sidebar">
  <div class="sidebar-profile text-center py-4">
    <% if user_signed_in? %>
      <%= image_tag(current_user.photo.url, alt: "Profile Picture", class: "rounded-circle", width: "80", height: "80") if current_user.photo.present? %>
      <h6 class="mt-2 mb-1"><%= current_user.name %></h6>
      <p class="text-muted mb-3">Administrator</p>
    <% else %>
      <p class="text-muted mb-3">Not logged in</p>
    <% end %>
  </div>
  <ul class="nav flex-column text-start px-3">
    <li class="nav-item">
      <%= link_to 'Dashboard', home_path, class: "nav-link d-flex align-items-center", data: { turbo_frame: "main-content" } %>
    </li>
    <li class="nav-item">
      <%= link_to 'Analytics', analytics_path, class: "nav-link d-flex align-items-center", data: { turbo_frame: "main-content" } %>
    </li>
    <li class="nav-item">
      <%= link_to 'Calendar', calendar_path, class: "nav-link d-flex align-items-center", data: { turbo_frame: "main-content" } %>
    </li>
  </ul>
</div>
