<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agriculture Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="styles.css"> <!-- Arquivo CSS personalizado -->
</head>
<body>

<!-- Navbar que inclui o botão para expandir/recolher a sidebar -->
<nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
    <div class="container-fluid">
        <button id="toggleSidebar" class="btn btn-outline-success me-2">
            <i class="bi bi-list"></i> <!-- Ícone para recolher/expandir -->
        </button>
        <a class="navbar-brand ms-3" href="#">Agriculture Dashboard</a>
        <div class="ms-auto d-flex align-items-center">
            <button class="btn btn-link text-dark me-3">
                <i class="bi bi-bell"></i>
                <span class="badge bg-danger">7</span>
            </button>
            <div class="dropdown">
                <a href="#" class="d-flex align-items-center text-dark text-decoration-none" id="dropdownUser" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="profile.jpg" alt="Profile" width="32" height="32" class="rounded-circle me-2">
                    <strong>Taylor</strong>
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="#">Profile</a></li>
<%= form_with(url: destroy_user_session_path, method: :delete, local: true) do %>
  <%= submit_tag "Sign out", class: "btn btn-link" %>
<% end %>

                </ul>
            </div>
        </div>
    </div>
</nav>

<div class="d-flex">
    <!-- Sidebar -->
    <nav id="sidebar" class="sidebar bg-light shadow-sm">
        <div class="sidebar-profile text-center py-4">
            <img src="profile.jpg" alt="Profile Picture" class="rounded-circle" width="80" height="80">
            <h6 class="mt-2 mb-1">Floyd Howard</h6>
            <p class="text-muted mb-3">Administrator</p>
        </div>
        <ul class="nav flex-column text-start px-3">
            <li class="nav-item">
                <a class="nav-link d-flex align-items-center" href="#">
                    <i class="bi bi-house-door me-2"></i> <span>Dashboard</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link d-flex align-items-center" href="#">
                    <i class="bi bi-bar-chart me-2"></i> <span>Analytics</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link d-flex align-items-center" href="#">
                    <i class="bi bi-calendar me-2"></i> <span>Calendar</span>
                </a>
            </li>
        </ul>
    </nav>

    <!-- Conteúdo Principal -->
    <div class="main-content flex-grow-1 p-4">
        <h1 class="h3 mb-4">Dashboard</h1>
        
        <!-- Cartões -->
        <div class="row g-3 mb-4">
            <div class="col-md-3">
                <div class="card shadow-sm border-0 bg-white">
                    <div class="card-body text-center">
                        <h6 class="card-title text-success">Weekly Sales</h6>
                        <h2 class="card-value">$47K</h2>
                        <p class="text-muted small">+3.5% compared to last week</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow-sm border-0 bg-white">
                    <div class="card-body text-center">
                        <h6 class="card-title text-success">Total Orders</h6>
                        <h2 class="card-value">58.4K</h2>
                        <p class="text-muted small">+13.6% increase</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow-sm border-0 bg-white">
                    <div class="card-body text-center">
                        <h6 class="card-title text-success">Market Share</h6>
                        <h2 class="card-value">26M</h2>
                        <p class="text-muted small">Samsung, Huawei, Apple</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow-sm border-0 bg-white">
                    <div class="card-body text-center">
                        <h6 class="card-title text-success">Weather</h6>
                        <h2 class="card-value">31°C</h2>
                        <p class="text-muted small">Sunny</p>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Gráficos e Projetos em Andamento -->
        <div class="row g-3">
            <div class="col-md-8">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title">Total Sales</h5>
                        <canvas id="salesChart"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title">Running Projects</h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Falcon <span class="badge bg-success rounded-pill">90%</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Reign <span class="badge bg-success rounded-pill">78%</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Boots4 <span class="badge bg-success rounded-pill">79%</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Raven <span class="badge bg-warning rounded-pill">38%</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Slick <span class="badge bg-danger rounded-pill">40%</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Armazenamento e Outros Cartões -->
        <div class="row g-3 mt-4">
            <div class="col-md-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title">Storage</h5>
                        <p>Using 1466 MB of 2 GB</p>
                        <div class="progress">
                            <div class="progress-bar bg-success" role="progressbar" style="width: 70%" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title">Best Selling Products</h5>
                        <p>Revenue: $3189</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title">Shared Files</h5>
                        <p>Total Files: 100</p>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<!-- JavaScript para funcionalidade do toggle da sidebar -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="script.js"></script> <!-- Arquivo JS para gráficos -->

<script>
    document.getElementById('toggleSidebar').addEventListener('click', function () {
        document.getElementById('sidebar').classList.toggle('collapsed');
        document.querySelector('.main-content').classList.toggle('collapsed');
    });

    // Exemplo de gráfico usando Chart.js
    var ctx = document.getElementById('salesChart').getContext('2d');
    var salesChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
            datasets: [{
                label: 'Sales',
                data: [50, 60, 70, 80, 100, 120],
                borderColor: '#28a745',
                backgroundColor: 'rgba(40, 167, 69, 0.2)',
                fill: true,
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>

</body>
</html>
